<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis配置文件-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zyz.blogadmin.dao.mapper.PermissionMapper">

    <select id="findPermissionsByAdminId" parameterType="long" resultType="com.zyz.blogadmin.dao.po.SysPermission">
        select * from blog_permission where id in (select permission_id from blog_admin_permission where admin_id=#{adminId})
    </select>
</mapper>
